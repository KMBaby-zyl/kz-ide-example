{
    "title": "分享",
    "font_icon": "&#xe02b;",
    "html": "<div class=\"mod mod-share\" style=\"margin:{{margin-top}} {{margin-right}} {{margin-bottom}} {{margin-left}};\">    <span class=\"hd\">分享</span>    {{#qzone}}<a href=\"{{qzone_url}}\" class=\"qzone\" title=\"分享到QQ空间\"></a>{{/qzone}}    {{#sina}}<a href=\"{{sina_url}}\" class=\"sina\" title=\"分享到新浪微博\"></a>{{/sina}}    {{#renren}}<a href=\"{{renren_url}}\" class=\"renren\" title=\"分享到人人\"></a>{{/renren}}    {{#sohu}}<a href=\"{{sohu_url}}\" class=\"sohu\" title=\"分享到搜狐微博\"></a>{{/sohu}}</div>",
    "data_config": {
        "qzone": {
            "type": "boolean",
            "default": true
        },
        "sina": {
            "type": "boolean",
            "default": true
        },
        "renren": {
            "type": "boolean",
            "default": true
        },
        "sohu": {
            "type": "boolean",
            "default": true
        },
        "douban": {
            "type": "boolean",
            "default": false
        },
        "qqweibo": {
            "type": "boolean",
            "default": false
        },
        "margin-top": {
            "type": "string",
            "required": false,
            "category": "style",
            "widget": {
                "type": "switchrow",
                "label": "调整边距",
                "opt": {
                    "name": "chk_margin",
                    "content": {
                        "type": "margin"
                    }
                },
                "data_name": "margin-top"
            }
        },
        "margin-right": {
            "type": "string",
            "required": false
        },
        "margin-bottom": {
            "type": "string",
            "required": false
        },
        "margin-left": {
            "type": "string",
            "required": false
        }
    },
    "widgets": {
        "style": [
            {
                "type": "switchrow",
                "label": "调整边距",
                "opt": {
                    "name": "chk_margin",
                    "content": {
                        "type": "margin"
                    }
                },
                "data_name": "margin-top"
            }
        ]
    }
}